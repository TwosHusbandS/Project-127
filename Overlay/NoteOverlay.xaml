<Page x:Class="Project_127.Overlay.NoteOverlay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_127"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="720"      
      Background="{x:Static local:MyColors.App_Submenu_Background}"
      Title="ReadMe">
    <Grid Height="600" Margin="15,0,15,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Style="{StaticResource lbl}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Left" FontSize="24" Height="60" VerticalAlignment="Bottom" Margin="0,0,0,0" Content="Note Overlay"/>

        <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Fill="{x:Static local:MyColors.SE_RowBackground}" Margin="0,0,0,2"/>
        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource lbl_Set_Info}" Content="Enable Project 1.27 Notes - Overlay"/>
        <Button Grid.Row="1" Grid.Column="2" x:Name="btn_cb_Set_EnableOverlay"  Style="{StaticResource btn_cb}" Click="btn_cb_Click" MouseEnter="btn_MouseEnter" MouseLeave="btn_MouseLeave"/>

        <Rectangle Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Fill="{x:Static local:MyColors.SE_RowBackground}" Margin="0,0,0,2"/>
        <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource lbl_Set_Info}" Content="Enable continously refreshing Project 1.27 - Overlay - Textfile"/>
        <Button Grid.Row="2" Grid.Column="2" x:Name="btn_cb_Set_EnableOverlayRefresh"  Style="{StaticResource btn_cb}" Click="btn_cb_Click" MouseEnter="btn_MouseEnter" MouseLeave="btn_MouseLeave"/>

        <Rectangle Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Fill="{x:Static local:MyColors.SE_RowBackground}" Margin="0,2,0,0" ToolTip="Gives you a Window you can move around instead of drawing on top of bordered / windowed GTA"/>
        <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource lbl_Set_Info}" Content="Enable Fullscreen / MultiMonitor - Mode"  ToolTip="Gives you a Window you can move around instead of drawing on top of bordered / windowed GTA. Rightclick checkbox to reset Location"/>
        <Button Grid.Row="3" Grid.Column="2" x:Name="btn_cb_Set_OverlayMultiMonitorMode"  Style="{StaticResource btn_cb}" Click="btn_cb_Click" MouseEnter="btn_MouseEnter" MouseLeave="btn_MouseLeave" MouseRightButtonDown="btn_cb_Set_OverlayMultiMonitorMode_MouseRightButtonDown" ToolTip="Rightclick checkbox to reset Location"/>
        <Rectangle x:Name="Rect_HideOption5" Grid.Row="3" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="3" Fill="{x:Static local:MyColors.MyColorOffWhite85}" ToolTip="Non effective when Overlay not activated"/>

        <Button x:Name="btn_Notes" Margin="0,10,5,10" Content="Notes" Grid.Row="4" Grid.Column="0" Click="btn_Notes_Click" Style="{StaticResource btn_hamburgeritem}"/>
        <Button x:Name="btn_Looks" Margin="5,10,5,10" Content="Looks" Grid.Row="4" Grid.Column="1" Click="btn_Looks_Click" Style="{StaticResource btn_hamburgeritem}" MouseRightButtonDown="btn_Looks_MouseRightButtonDown"/>
        <Button x:Name="btn_Keybindings" Margin="5,10,0,10" Content="Keybindings" Grid.Row="4" Grid.Column="2" Click="btn_Keybindings_Click" Style="{StaticResource btn_hamburgeritem}"/>

        <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,5,0,15" BorderBrush="{x:Static local:MyColors.SE_BorderBrush_Inner}" BorderThickness="2" Background="{x:Static local:MyColors.SE_RowBackground}">
            <Frame x:Name="Frame_Notes" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"/>
        </Border>

    </Grid>
</Page>