<Window x:Class="Project_127.PopupCombobox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_127"
        mc:Ignorable="d"
        Title="Popup" 
        Background="{x:Static local:Globals.PU_Background}"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Height="Auto"
        Width="Auto"
        SizeToContent="WidthAndHeight"
        Icon="/Artwork/icon.png">
    <Border BorderBrush="{x:Static local:Globals.PU_BorderBrush}" BorderThickness="2" >
        <Grid x:Name="myGrid" Margin="10,5">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="myRow0" Height="1.8*"/>
                <RowDefinition x:Name="myRow1" Height="*"/>
                <RowDefinition x:Name="myRow2" Height="*"/>
            </Grid.RowDefinitions>

            <Label x:Name="lbl_Main" Grid.Row="0" Style="{StaticResource lbl}"/>
            <ComboBox x:Name="cb_Main" Grid.Row="1" Style="{StaticResource cb}"/>
            <Button x:Name="btn_Ok" Grid.Row="2" Style="{StaticResource PU_btn}" Content="Ok" Click="btn_Ok_Click"/>
        </Grid>
    </Border>
</Window>
